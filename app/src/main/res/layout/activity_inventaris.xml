<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c4c5c6"
    tools:context=".Inventaris">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="152dp"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="126dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_unarchive_black_24dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="320dp"
            android:text="Jumlah"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="383dp"
            android:text="Keterangan"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="246dp"
            android:text="Kondisi"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-71dp"
            android:text="Nama_inventaris"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="142dp"
            android:text="Inventarisir"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="163dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:hint="Masukan Inventaris"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="378dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:hint="Ada/Tidak ada :"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:hint="Masukan Jumlah :"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="236dp"
            android:layout_marginEnd="6dp"
            android:ems="10"
            android:hint="Masukan %"
            android:inputType="number" />

        <Button
            android:id="@+id/btnkirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="242dp"
            android:text="Kirim" />


    </RelativeLayout>




</LinearLayout>